<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnrecipemedicodetalle.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_detail_prescription_medic}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_detail_prescription_medic}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnrecipemedicodetalle.sql' width='100' spacingBefore='40'>
			<col name='rec_estatus_pl0' title='${lbl:b_prescription_medic}' width='10' align='left' />
			<col name='smn_principio_activo_rf' title='${lbl:b_active_ingredient}' width='10' align='left' format='######' />
			<col name='smn_item_rf' title='${lbl:b_item}' width='10' align='left' format='######' />
			<col name='smn_presentacion_rf' title='${lbl:b_presentacion}' width='10' align='left' format='######' />
			<col name='rmd_dosis' title='${lbl:b_dose}' width='10' align='left' format='#,###,##0.00' />
			<col name='rmd_frecuencia' title='${lbl:b_frecuency}' width='10' align='left' format='######' />
			<col name='rmd_especificacion' title='${lbl:b_indications}' width='10' align='left' />
			<col name='rmd_dias_tratamiento' title='${lbl:b_treatment_day}' width='10' align='left' format='######' />
			<col name='rmd_fecha_registro' title='${lbl:b_store_date}' width='10' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>

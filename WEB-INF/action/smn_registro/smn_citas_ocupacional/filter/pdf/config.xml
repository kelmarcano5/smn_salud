<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smncitas.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_citas}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_citas}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='cts_num_control' title='${lbl:b_code}'   align='left' />
			<col name='cts_fecha_registro' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smncitas.sql' width='100' spacingBefore='10'>
			<col name='cts_auxiliar' title='${lbl:b_auxiliary_pa}' width='20' align='left'  />
			<col name='contratante' title='Contratante' width='20' align='left'  />
			<col name='cts_num_control' title='${lbl:b_num_control_citas}' width='20' align='left'  />
			<col name='servicio' title='Servicio' width='20' align='left'  />
			<col name='fecha_cita' title='Fecha Cita' width='20' align='left' format='dd-MM-yyyy' />
			<col name='smn_estatus_citas_id' title='Estatus Cita' width='20' align='left'  />
			<col name='cts_fecha_registro' title='${lbl:b_store_date}' width='20' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>

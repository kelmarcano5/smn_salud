<?xml version='1.0' encoding='ISO-8859-1'?>
<validator id='repgen.filter' onerror='/action/error/validation/ajax'>

	<parameter id='fdesde' type='date' required='false' label='Fecha desde'/>
	<parameter id='fhasta' type='date' required='false' label='Fecha hasta'/>
	
	<parameter id='smn_recipe_medico_id_name' type='varchar' required='false' label='${lbl:b_prescription_medic}'/>
	<parameter id='smn_recipe_medico_id' type='integer' required='false' label='${lbl:b_prescription_medic}' maxlen='10'/>
	<parameter id='smn_principio_activo_rf' type='integer' required='false' label='${lbl:b_active_ingredient}' maxlen='10'/>
	<parameter id='smn_item_rf' type='integer' required='false' label='${lbl:b_item}' maxlen='10'/>
	<parameter id='smn_presentacion_rf' type='integer' required='false' label='${lbl:b_presentacion}' maxlen='10'/>
	<parameter id='smn_unidad_medida_rf' type='integer' required='false' label='${lbl:b_measurement_unit}' maxlen='10'/>
	<parameter id='rmd_dosis' type='double' required='false' label='${lbl:b_dose}' maxlen='10'/>
	<parameter id='rmd_frecuencia' type='integer' required='false' label='${lbl:b_frecuency}' maxlen='10'/>
	<parameter id='rmd_tiempo_frecuencia' type='varchar' required='false' label='${lbl:b_frecuency_time}' maxlen='2'/>
	<parameter id='rmd_especificacion' type='varchar' required='false' label='${lbl:b_especification}' maxlen='200'/>
	<parameter id='rmd_dias_tratamiento' type='integer' required='false' label='${lbl:b_treatment_day}' maxlen='10'/>
	<parameter id='rmd_dosis_total' type='integer' required='false' label='${lbl:b_total_dose}' maxlen='10'/>
	<parameter id='rmd_observacion' type='varchar' required='false' label='${lbl:b_observation}' maxlen='200'/>

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='smn_recipe_medico_id_name'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='rmd_tiempo_frecuencia'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='rmd_especificacion'
		rule='contains' />

	<custom-validator
		classname='dinamica.validators.SQLPatternTransformer'
		parameter='rmd_observacion'
		rule='contains' />



	<custom-validator
			classname='dinamica.validators.ArrayNotEmptyValidator'
			on-error-label='Seleccione al menos un campo para la generación del reporte.'
			parameter-name='field_id' 
			id='field_id' />

	<custom-validator 
			classname='dinamica.validators.ArrayToRecordset'
			paramName='field_id' 
			recordsetId='fields' 
			colName='field_id' 
			colType='integer' />
				
</validator>

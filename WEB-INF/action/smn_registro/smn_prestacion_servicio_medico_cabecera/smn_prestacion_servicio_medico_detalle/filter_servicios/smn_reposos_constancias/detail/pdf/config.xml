<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_constancy_rest}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_constancy_rest}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_constancy_rest}' width='60' spacingBefore='40'>
			<col name='smn_ingreso_id' title='${lbl:b_income}' align='left' format='######' />
			<col name='smn_auxiliar_rf' title='${lbl:b_auxiliary}' align='left' format='######' />
			<col name='smn_diagnostico_rf' title='${lbl:b_diagnostic}' align='left' format='######' />
			<col name='rpc_fecha_desde' title='${lbl:b_init_date}' align='left' format='dd-MM-yyyy' />
			<col name='rpc_fecha_hasta' title='${lbl:b_end_date}' align='left' format='dd-MM-yyyy' />
			<col name='rpc_fecha_reintegro' title='${lbl:b_reintegro_date}' align='left' format='dd-MM-yyyy' />
			<col name='rpc_motivo' title='${lbl:b_reason}' align='left' format='######' />
			<col name='rpc_observacion' title='${lbl:b_observations}' align='left' />
			<col name='rpc_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>

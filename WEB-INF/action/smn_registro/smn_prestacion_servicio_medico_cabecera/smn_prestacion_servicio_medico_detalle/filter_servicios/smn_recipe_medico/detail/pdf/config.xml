<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
		<recordset id='detail-smnrecipemedicodetalle.sql' source='session' scope='transaction' />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_prescription_medic}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_prescription_medic}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_prescription_medic}' width='60' spacingBefore='40'>
			<col name='rec_fecha' title='${lbl:b_prescription_date}' align='left' format='dd-MM-yyyy' />
			<col name='smn_auxiliar_rf' title='${lbl:b_auxiliary}' align='left'  />
			<col name='smn_patologia_id' title='${lbl:b_pathology}' align='left'  />
			<col name='smn_prestador_servicio_rf' title='${lbl:b_service_providers}' align='left'  />
			<col name='prs_descripcion' title='${lbl:b_applicant}' align='left'  />
			<col name='smn_contratante_id' title='${lbl:b_contratante}' align='left'  />
			<col name='smn_farmaceuta_prestador_servicio_rf' title='${lbl:b_service_providers}' align='left'  />
			<col name='rec_fecha_aprobacion' title='${lbl:b_aprobated_date}' align='left' format='dd-MM-yyyy' />
			<col name='rec_estatus' title='${lbl:b_estatus}' align='left' />
			<col name='rec_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>
		<table recordset='detail-smnrecipemedicodetalle.sql' width='100' spacingBefore='40'>
			<col name='smn_recipe_medico_detalle_id' title='${lbl:b_detail_prescription_medic}' width='8' align='left'  />
			<col name='smn_principio_activo_rf' title='${lbl:b_active_ingredient}' width='8' align='left'  />
			<col name='smn_item_rf' title='${lbl:b_item}' width='8' align='left'  />
			<col name='smn_presentacion_rf' title='${lbl:b_presentacion}' width='8' align='left'  />
			<col name='smn_unidad_medida_rf' title='${lbl:b_measurement_unit}' width='8' align='left'  />
			<col name='rmd_dosis' title='${lbl:b_dose}' width='8' align='left' format='#,###,##0.00' />
			<col name='rmd_tiempo_frecuencia' title='${lbl:b_frecuency_time}' width='8' align='left' />
			<col name='rmd_especificacion' title='${lbl:b_especification}' width='8' align='left' />
			<col name='rmd_dias_tratamiento' title='${lbl:b_treatment_day}' width='8' align='left'  />
			<col name='rmd_dosis_total' title='${lbl:b_total_dose}' width='8' align='left'  />
			<col name='rmd_observacion' title='${lbl:b_observation}' width='8' align='left' />
			<col name='rmd_fecha_registro' title='${lbl:b_store_date}' width='8' align='left' format='dd-MM-yyyy' />
		</table>


	</pdf-report>
</config>

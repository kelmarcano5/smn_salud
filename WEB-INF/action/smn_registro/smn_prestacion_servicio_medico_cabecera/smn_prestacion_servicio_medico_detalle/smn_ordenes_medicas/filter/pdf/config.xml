<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnordenesmedicas.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_orders_medics}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_orders_medics}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='smn_ingreso_id' title='${lbl:b_ingreso}'   align='left' />
			<col name='omd_numero_orden' title='${lbl:b_code}'  align='left' />
			<col name='omd_descripcion' title='${lbl:b_description}'  align='left' />
			<col name='omd_auxiliar' title='${lbl:b_auxiliary}'   align='left' />
			<col name='omd_fecha_registro_ini' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />
			<col name='omd_fecha_registro_fin' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smnordenesmedicas.sql' width='100' spacingBefore='10'>
			<col name='smn_ingreso_id' title='${lbl:b_ingreso}' width='10' align='left'  />
			<col name='omd_numero_orden' title='${lbl:b_code}' width='10' align='left' />
			<col name='omd_descripcion' title='${lbl:b_description}' width='10' align='left' />
			<col name='smn_prestador_servicio_rf' title='${lbl:b_service_providers}' width='10' align='left'  />
			<col name='omd_clase_auxiliar' title='${lbl:b_auxiliary_class}' width='10' align='left'  />
			<col name='omd_auxiliar' title='${lbl:b_auxiliary}' width='10' align='left'  />
			<col name='omd_tipo_orden' title='${lbl:b_order_type}' width='10' align='left' />
			<col name='omd_indicaciones' title='${lbl:b_indications}' width='10' align='left' />
			<col name='omd_fecha_registro' title='${lbl:b_store_date}' width='10' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>

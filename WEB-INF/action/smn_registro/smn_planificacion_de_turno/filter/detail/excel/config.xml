<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="3" cellStep="0" name="${lbl:b_plan_turnos}"/>
	
	<excel 
		recordset='query.sql' 
		sheetname='${lbl:b_plan_turnos}' 
		filename='${lbl:b_plan_turnos}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='smn_usuario_id' label='${lbl:b_users}' />
		<col id='smn_rol_id' label='${lbl:b_role}' />
		<col id='ptu_fecha' label='${lbl:b_fecha_atencion}' />
		<col id='smn_serie_id' label='${lbl:b_serie}' />
		<col id='smn_entidades_rf' label='${lbl:b_entities}' />
		<col id='smn_sucursales_rf' label='${lbl:b_subsidiaries}' />
		<col id='smn_areas_servicios_rf' label='${lbl:b_service_area}' />

	</excel>

</config>

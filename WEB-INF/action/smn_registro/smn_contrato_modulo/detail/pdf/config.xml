<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_contrato_modulo}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_contrato_modulo}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_contrato_modulo}' width='60' spacingBefore='40'>
			<col name='smn_contrato_base_rf' title='${lbl:b_contrato_base}' align='left' format='######' />
			<col name='smn_documento_id' title='${lbl:b_contrato_doc}' align='left' format='######' />
			<col name='ctm_numero_contrato' title='${lbl:b_number_contract}' align='left' format='######' />
			<col name='smn_contratante_id' title='${lbl:b_contratante}' align='left' format='######' />
			<col name='ctm_fecha_vigencia_desde' title='${lbl:b_vigency_start_date}' align='left' format='dd-MM-yyyy' />
			<col name='ctm_fecha_vigencia_hasta' title='${lbl:b_vigency_stop_date}' align='left' format='dd-MM-yyyy' />
			<col name='smn_planes_id' title='${lbl:b_planes}' align='left' format='######' />
			<col name='ctm_cantidad_afiliados' title='${lbl:b_quantity_afiliated}' align='left' format='######' />
			<col name='ctm_monto_contrato' title='${lbl:b_amount_contract}' align='left' format='#,###,##0.00' />
			<col name='ctm_monto_cobertura_afiliado' title='${lbl:b_amount_coverage_afiliated}' align='left' format='#,###,##0.00' />
			<col name='ctm_cantidad_servicio_afiliado' title='${lbl:b_quantity_afiliated_services}' align='left' format='######' />
			<col name='ctm_cantidad_dias_cobertura' title='${lbl:b_quantity_coverage_days}' align='left' format='######' />
			<col name='ctm_cantidad_citas' title='${lbl:b_quantity_citas}' align='left' format='######' />
			<col name='smn_descuento_rf' title='${lbl:b_discount}' align='left' />
			<col name='ctm_dia_factura' title='${lbl:b_days_bill}' align='left' format='######' />
			<col name='ctm_estatus_proceso' title='${lbl:b_status_process}' align='left' />
			<col name='ctm_estatus_financiero' title='Estatus Financiero' align='left' />
			<col name='ctm_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>

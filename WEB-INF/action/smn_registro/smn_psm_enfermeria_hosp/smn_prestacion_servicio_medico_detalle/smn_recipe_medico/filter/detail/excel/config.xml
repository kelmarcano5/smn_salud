<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="4" cellStep="0" name="${lbl:b_prescription_medic}"/>
	
	<excel 
		recordset='query.sql' 
		sheetname='${lbl:b_prescription_medic}' 
		filename='${lbl:b_prescription_medic}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='rec_fecha' label='${lbl:b_prescription_date}' />
		<col id='smn_auxiliar_rf' label='${lbl:b_auxiliary}' />
		<col id='smn_patologia_id' label='${lbl:b_pathology}' />
		<col id='smn_prestador_servicio_rf' label='${lbl:b_service_providers}' />
		<col id='smn_farmaceuta_prestador_servicio_rf' label='${lbl:b_service_providers}' />
		<col id='rec_fecha_aprobacion' label='${lbl:b_aprobated_date}' />
		<col id='rec_estatus' label='${lbl:b_estatus}' />
		<col id='rec_fecha_registro' label='${lbl:b_store_date}' />

	</excel>

</config>

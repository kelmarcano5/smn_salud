<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_presupuesto_detalle_componente}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_presupuesto_detalle_componente}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_presupuesto_detalle_componente}' width='60' spacingBefore='40'>
			<col name='smn_presupuesto_detalle_id' title='${lbl:b_presupuesto_detalle}' align='left' format='######' />
			<col name='smn_presupuesto_id' title='${lbl:b_presupuesto}' align='left' format='######' />
			<col name='smn_servicios_rf' title='${lbl:b_services}' align='left' format='######' />
			<col name='smn_tipos_componentes_rf' title='${lbl:b_type_component}' align='left' />
			<col name='smn_componentes_rf' title='${lbl:b_component}' align='left' format='######' />
			<col name='smn_grupo_prestador_rf' title='${lbl:b_group_of_provider}' align='left' format='######' />
			<col name='smn_prestadores_servicios_rf' title='${fld:b_service_provider}' align='left' format='######' />
			<col name='prc_porcentaje_prestador' title='${lbl:b_percentage}' align='left' format='######' />
			<col name='prc_forma_calculo_rf' title='${lbl:b_forma_calculo}' align='left' />
			<col name='prc_visible_rf' title='${lbl:b_visible}' align='left' />
			<col name='prc_cantidad' title='${lbl:b_quantity}' align='left' format='######' />
			<col name='prc_precio_ml' title='${lbl:b_price}' align='left' format='#,###,##0.00' />
			<col name='prc_precio_ma' title='${lbl:b_price_ma}' align='left' format='#,###,##0.00' />
			<col name='smn_moneda_rf' title='${lbl:b_coins}' align='left' format='######' />
			<col name='prc_monto_ml' title='${lbl:b_amount}' align='left' format='#,###,##0.00' />
			<col name='prc_monto_ma' title='${lbl:b_amount_ma}' align='left' format='#,###,##0.00' />
			<col name='prc_monto_impuesto_ml' title='${lbl:b_amount_tax}' align='left' format='#,###,##0.00' />
			<col name='prc_monto_impuesto_ma' title='${lbl:b_amount_tax_ma}' align='left' format='#,###,##0.00' />
			<col name='prc_monto_descuento_ml' title='${lbl:b_amount_discount}' align='left' format='#,###,##0.00' />
			<col name='prc_monto_descuento_ma' title='${lbl:b_amount_discount_ma}' align='left' format='#,###,##0.00' />
			<col name='smn_incrementos_porcentaje_rf' title='${lbl:b_incremento_rf}' align='left' format='######' />
			<col name='prc_monto_incremento_ml' title='${lbl:b_amount__increment}' align='left' format='#,###,##0.00' />
			<col name='prc_monto_incremento_ma' title='${lbl:b_amount_increment_ma}' align='left' format='#,###,##0.00' />
			<col name='prc_monto_neto_ml' title='${lbl:b_amount_net}' align='left' format='#,###,##0.00' />
			<col name='prc_monto_neto_ma' title='${lbl:b_amount_net_ma}' align='left' format='#,###,##0.00' />
			<col name='prc_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>

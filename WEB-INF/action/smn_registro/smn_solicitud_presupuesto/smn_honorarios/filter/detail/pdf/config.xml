<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_plan_quirurgico}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_plan_quirurgico}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_plan_quirurgico}' width='60' spacingBefore='40'>
			<col name='smn_entidad_rf' title='${lbl:b_entidades_rp}' align='left' format='######' />
			<col name='smn_sucursal_rf' title='${lbl:b_sucursal_rp}' align='left' format='######' />
			<col name='smn_habitaciones_id' title='${lbl:b_habitaciones}' align='left' format='######' />
			<col name='smn_contratante_id' title='${lbl:b_contratante}' align='left' format='######' />
			<col name='smn_clase_auxiliar_rf' title='${lbl:b_paciente_clase}' align='left' format='######' />
			<col name='smn_auxiliar_rf' title='${lbl:b_auxiliary_pa}' align='left' format='######' />
			<col name='smn_patologia_rf' title='${lbl:b_surgery}' align='left' format='######' />
			<col name='plq_fecha_cirugia' title='${lbl:b_surgery_date}' align='left' format='dd-MM-yyyy' />
			<col name='plq_hora_inicial' title='${lbl:b_entry_hour}' align='left' />
			<col name='plq_hora_final' title='${lbl:b_exit_hour}' align='left' />
			<col name='plq_cantidad_horas' title='${lbl:b_quantity_hour}' align='left' format='######' />
			<col name='plq_estatus' title='${lbl:b_status}' align='left' />
			<col name='plq_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>

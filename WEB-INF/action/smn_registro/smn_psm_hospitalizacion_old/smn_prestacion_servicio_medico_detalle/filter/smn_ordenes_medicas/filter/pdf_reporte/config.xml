<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="false">

	<summary>
		PagedView generic configuration
	</summary>

	<log>false</log>
	
	<set-request-attribute id="progress" value="file:/WEB-INF/action/progress/progress.htm"/>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>true</validator>
		<transaction>true</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-paciente.sql" source="sql" scope="transaction" />
		<recordset id="query-prestador_servicio.sql" source="sql" scope="transaction" />
		<recordset id="query-servicios.sql" source="sql" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.GenericOutput</classname>
		<template>template.htm</template>
		<set-http-headers>true</set-http-headers>
		<content-type>text/html</content-type>
		<print mode="form" recordset="query-paciente.sql" />
		<print mode="form" recordset="query-prestador_servicio.sql" />
		<print mode="table" recordset="query-servicios.sql" tag="rows" alternate-colors="true"/>
	</output>

</config>

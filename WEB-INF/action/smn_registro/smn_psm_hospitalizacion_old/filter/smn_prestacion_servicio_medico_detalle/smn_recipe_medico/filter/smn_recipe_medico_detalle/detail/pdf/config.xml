<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_detail_prescription_medic}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_detail_prescription_medic}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_detail_prescription_medic}' width='60' spacingBefore='40'>
			<col name='rec_estatus_pl0' title='${lbl:b_prescription_medic}' align='left' />
			<col name='smn_principio_activo_rf' title='${lbl:b_active_ingredient}' align='left' format='######' />
			<col name='smn_item_rf' title='${lbl:b_item}' align='left' format='######' />
			<col name='smn_presentacion_rf' title='${lbl:b_presentacion}' align='left' format='######' />
			<col name='smn_unidad_medida_rf' title='${lbl:b_measurement_unit}' align='left' format='######' />
			<col name='rmd_dosis' title='${lbl:b_dose}' align='left' format='#,###,##0.00' />
			<col name='rmd_frecuencia' title='${lbl:b_frecuency}' align='left' format='######' />
			<col name='rmd_tiempo_frecuencia' title='${lbl:b_frecuency_time}' align='left' />
			<col name='rmd_especificacion' title='${lbl:b_especification}' align='left' />
			<col name='rmd_dias_tratamiento' title='${lbl:b_treatment_day}' align='left' format='######' />
			<col name='rmd_dosis_total' title='${lbl:b_total_dose}' align='left' format='######' />
			<col name='rmd_observacion' title='${lbl:b_observation}' align='left' />
			<col name='rmd_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>

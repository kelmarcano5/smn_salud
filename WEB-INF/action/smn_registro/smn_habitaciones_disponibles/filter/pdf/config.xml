<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnhabitacionesdisponibles.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_rooms_availability}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_rooms_availability}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='smn_habitaciones_id' title='${lbl:b_activo_fijo}'  format='######' align='left' />
			<col name='smn_ingreso_id' title='${lbl:b_ingreso}'  format='######' align='left' />
			<col name='had_fecha_ingreso' title='${lbl:b_date_ing}'  format='dd-MM-yyyy' align='left' />
			<col name='had_fecha_egreso' title='${lbl:b_date_egr}'  format='dd-MM-yyyy' align='left' />
			<col name='had_estatus' title='${lbl:b_status}'  align='left' />
			<col name='had_fecha_registro_ini' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />
			<col name='had_fecha_registro_fin' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smnhabitacionesdisponibles.sql' width='100' spacingBefore='10'>
			<col name='smn_habitaciones_id' title='${lbl:b_activo_fijo}' width='16' align='left' format='######' />
			<col name='smn_ingreso_id' title='${lbl:b_ingreso}' width='16' align='left' format='######' />
			<col name='had_fecha_ingreso' title='${lbl:b_date_ing}' width='16' align='left' format='dd-MM-yyyy' />
			<col name='had_fecha_egreso' title='${lbl:b_date_egr}' width='16' align='left' format='dd-MM-yyyy' />
			<col name='had_estatus' title='${lbl:b_status}' width='16' align='left' />
			<col name='had_fecha_registro' title='${lbl:b_store_date}' width='16' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>

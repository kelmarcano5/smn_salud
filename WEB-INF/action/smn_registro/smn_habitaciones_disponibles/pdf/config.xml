<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnhabitacionesdisponibles.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_rooms_availability}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_rooms_availability}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnhabitacionesdisponibles.sql' width='100' spacingBefore='40'>
			<col name='smn_habitaciones_id' title='${lbl:b_activo_fijo}' width='16' align='left' format='######' />
			<col name='smn_ingreso_id' title='${lbl:b_ingreso}' width='16' align='left' format='######' />
			<col name='had_fecha_ingreso' title='${lbl:b_date_ing}' width='16' align='left' format='dd-MM-yyyy' />
			<col name='had_fecha_egreso' title='${lbl:b_date_egr}' width='16' align='left' format='dd-MM-yyyy' />
			<col name='had_estatus' title='${lbl:b_status}' width='16' align='left' />
			<col name='had_fecha_registro' title='${lbl:b_store_date}' width='16' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>

<?xml version='1.0' encoding='ISO-8859-1'?>
<config>

	<summary>
		Ejecutar consulta y enrutar dependiendo de que un recordset
		tenga o no registros
	</summary>

	<log>false</log>

	<!--configura el control de paginacion-->
	<set-request-attribute id="paging.recordset" value="query-smnagendamedica.sql" />
	<set-request-attribute id="paging.pagesize" value="10" />

	<!--soporte de auditoria-->
	<audit>
		<!--de donde saca los datos, por defecto es "_request"-->
		<recordset></recordset>
		<!--que campos extrae para el registro descriptivo-->
		<cols>
			<colname>smn_agenda_id</colname>
			<colname>smn_entidades_rf</colname>
			<colname>smn_sucursales_rf</colname>
			<colname>smn_areas_servicios_rf</colname>
			<colname>smn_unidades_servicios_rf</colname>
			<colname>smn_grupo_prestador_servicio_rf</colname>
			<colname>smn_prestador_servicio_rf</colname>
			<colname>agm_estatus</colname>
			<colname>smn_habitaciones_id</colname>
			
		
		</cols>
		<table>smn_salud.smn_agenda_medica</table>
		<oper>CONSULTA</oper>
		<area>Consulta</area>
		<!-- 
 			para auditoria de consulta permite obtener la cantidad de registro obtenidos
 			de la busqueda (opcional)
 		-->
		<recordCount recordset="query-smnagendamedica.sql"/>
	</audit>

	<transaction>
		<classname>dinamica.audit.AuditableSearch</classname>
		<validator>true</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
	</transaction>
	
	<searchCols>smn_agenda_id;smn_entidades_rf;smn_sucursales_rf;smn_areas_servicios_rf;smn_unidades_servicios_rf;smn_grupo_prestador_servicio_rf;smn_prestador_servicio_rf;agm_estatus;smn_habitaciones_id;</searchCols>

	<on-exit return-code="0" forward-to="/action/initview" />
	<on-exit return-code="1" forward-to="${def:actionroot}/notfound" />

</config>

<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_seguimiento}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_seguimiento}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_seguimiento}' width='60' spacingBefore='40'>
			<col name='smn_ingreso_id' title='${lbl:b_ingreso}' align='left' format='######' />
			<col name='seg_fecha' title='${lbl:b_date}' align='left' format='dd-MM-yyyy' />
			<col name='seg_hora_seg' title='${lbl:b_hour}' align='left' />
			<col name='seg_accion' title='${lbl:b_action}' align='left' format='######' />
			<col name='seg_observacion' title='${lbl:b_observation}' align='left' format='######' />
			<col name='seg_estatus' title='${lbl:b_estatus}' align='left' format='######' />
			<col name='seg_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>


	</pdf-report>
</config>

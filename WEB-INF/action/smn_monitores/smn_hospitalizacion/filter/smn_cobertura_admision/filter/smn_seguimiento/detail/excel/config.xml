<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="3" cellStep="0" name="${lbl:b_seguimiento}"/>
	
	<excel 
		recordset='query.sql' 
		sheetname='${lbl:b_seguimiento}' 
		filename='${lbl:b_seguimiento}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='smn_ingreso_id' label='${lbl:b_ingreso}' />
		<col id='seg_fecha' label='${lbl:b_date}' />
		<col id='seg_hora_seg' label='${lbl:b_hour}' />
		<col id='seg_accion' label='${lbl:b_action}' />
		<col id='seg_observacion' label='${lbl:b_observation}' />
		<col id='seg_estatus' label='${lbl:b_estatus}' />
		<col id='seg_fecha_registro' label='${lbl:b_store_date}' />

	</excel>

</config>

<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnseguimiento.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_seguimiento}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_seguimiento}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnseguimiento.sql' width='100' spacingBefore='40'>
			<col name='smn_ingreso_id' title='${lbl:b_ingreso}' width='14' align='left' format='######' />
			<col name='seg_fecha' title='${lbl:b_date}' width='14' align='left' format='dd-MM-yyyy' />
			<col name='seg_hora_seg' title='${lbl:b_hour}' width='14' align='left' />
			<col name='seg_accion' title='${lbl:b_action}' width='14' align='left' format='######' />
			<col name='seg_observacion' title='${lbl:b_observation}' width='14' align='left' format='######' />
			<col name='seg_estatus' title='${lbl:b_estatus}' width='14' align='left' format='######' />
			<col name='seg_fecha_registro' title='${lbl:b_store_date}' width='14' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>

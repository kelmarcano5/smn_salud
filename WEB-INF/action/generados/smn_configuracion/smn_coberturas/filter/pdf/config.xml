<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smncoberturas.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_cobertura}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='filter.params' title='Filtro de Búsqueda' noFilterMsg='-- Sin filtro de búsqueda --' width='55' spacingBefore='15'>
			<col name='cob_codigo' title='${lbl:b_code}'  align='center' />
			<col name='cob_descripcion' title='${lbl:b_description}'  align='center' />
		</record>
		<table recordset='query-smncoberturas.sql' width='100' spacingBefore='10'>
			<col name='cob_codigo' title='${lbl:b_code}' width='14' align='left' />
			<col name='cob_descripcion' title='${lbl:b_description}' width='14' align='left' />
			<col name='cob_vigencia_desde' title='${lbl:b_validation_date_from}' width='14' align='center' format='dd-MM-yyyy' />
			<col name='cob_vigencia_hasta' title='${lbl:b_validation_date_until}' width='14' align='center' format='dd-MM-yyyy' />
			<col name='cob_cobertura_desde' title='${lbl:b_coverage_from}' width='14' align='right' format='#,###,##0.00' />
			<col name='cob_cobertura_hasta' title='${lbl:b_coverage_until}' width='14' align='right' format='#,###,##0.00' />
			<col name='cob_fecha_registro' title='${lbl:b_store_date}' width='14' align='center' format='dd-MM-yyyy' />
		</table>

	</pdf-report>
</config>
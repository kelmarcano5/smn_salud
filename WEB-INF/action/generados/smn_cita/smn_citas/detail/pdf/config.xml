<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_citas}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_citas}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_citas}' width='60' spacingBefore='40'>
			<col name='cts_num_control' title='${lbl:b_code}' align='left' />
			<col name='cts_num_doc_oficial' title='${lbl:b_official_document_number}' align='left' />
			<col name='smn_motivos_id_combo' title='${lbl:b_reason}' align='left'  />
			<col name='cla_nombre_combo' title='${lbl:b_auxiliary_class}' align='left'  />
			<col name='smn_item_combo' title='${lbl:b_auxiliary}' align='left'  />
			<col name='smn_origen_id_combo' title='${lbl:b_origin}' align='left'  />
			<col name='prs_apellidos_combo' title='${lbl:b_applicant}' align='left'  />
			<col name='cts_tipo_orden_combo' title='${lbl:b_order_type}' align='left' />
			<col name='afi_apellidos_combo' title='${lbl:${lbl:b_titular}' align='left'  />
			<col name='smn_estatus_citas_id_combo' title='${lbl:b_status_appointment}' align='left'  />
			<col name='smn_relacionados_id_combo' title='${lbl:b_relacionados}' align='left'  />
			<col name='cts_idioma' title='${lbl:s_profile_lang}' align='left' />
			<col name='cts_usuario' title='${lbl:b_users}' align='left' />
			<col name='cts_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
			<col name='cts_hora' title='${lbl:s_loginhist_col2}' align='left' />
			<col name='smn_citas_mov_id_combo' title='${lbl:b_appointment_movement}' align='left'  />
		</record>


	</pdf-report>
</config>

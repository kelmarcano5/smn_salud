<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
		
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_appointment_movement}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='query.sql' title='${lbl:b_appointment_movement}' width='60' spacingBefore='40'>
			<col name='ctm_num_control_cita' title='${lbl:b_code}' align='left' />
			<col name='ctm_fecha' title='${lbl:b_appointment_date}' align='left' format='dd-MM-yyyy' />
			<col name='ctm_localidad' title='${lbl:b_location}' align='left' />
			<col name='ctm_servicio_combo' title='${lbl:b_service}' align='left' format='######' />
			<col name='ctm_componente_combo' title='${lbl:b_component}' align='left' format='######' />
			<col name='ctm_prestador_servicio_combo' title='${lbl:b_service_providers}' align='left' format='######' />
			<col name='ctm_tipo_componente_combo' title='${lbl:b_component_type}' align='left' />
			<col name='ctm_estatus_combo' title='${lbl:b_status}' align='left' format='######' />
			<col name='ctm_observ_cita_combo' title='${lbl:${lbl:b_appointment_comment}}' align='left' format='######' />
			<col name='ctm_idioma' title='${lbl:s_profile_lang}' align='left' />
			<col name='ctm_usuario' title='${lbl:b_users}' align='left' />
			<col name='ctm_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
			<col name='ctm_hora' title='${lbl:s_loginhist_col2}' align='left' />
		</record>

	</pdf-report>
</config>
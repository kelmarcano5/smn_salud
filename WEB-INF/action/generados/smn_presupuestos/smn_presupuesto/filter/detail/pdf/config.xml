<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
		
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_presupuesto}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='query.sql' title='${lbl:b_presupuesto}' width='60' spacingBefore='40'>
			<col name='pre_numero_control' title='${lbl:b_budget_number}' align='left' />
			<col name='pre_fecha' title='${lbl:b_budget_date}' align='left' format='dd-MM-yyyy' />
			<col name='pre_titular_combo' title='${lbl:b_titular}' align='left' format='######' />
			<col name='pre_beneficiario_combo' title='${lbl:b_beneficiario}' align='left' format='######' />
			<col name='pre_plan_combo' title='${lbl:b_plan}' align='left' format='######' />
			<col name='pre_clase_auxiliar_combo' title='${lbl:b_auxiliary_class}' align='left' format='######' />
			<col name='pre_auxiliar_combo' title='${lbl:b_auxiliary}' align='left' format='######' />
			<col name='pre_vigencia_hasta' title='${lbl:b_fecha_vigencia}' align='left' format='dd-MM-yyyy' />
			<col name='smn_ordenes_medicas_id_combo' title='${lbl:b_titular}' align='left' format='######' />
			<col name='smn_estado_presupuesto_id_combo' title='${lbl:b_budget_status}' align='left' format='######' />
			<col name='pre_idioma' title='${lbl:s_profile_lang}' align='left' />
			<col name='pre_usuario' title='${lbl:b_users}' align='left' />
			<col name='pre_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
			<col name='pre_hora' title='${lbl:s_loginhist_col2}' align='left' />
		</record>

	</pdf-report>
</config>
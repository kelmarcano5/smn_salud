<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnreltipodocpatologia.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_relacion_tipodoc_patologia}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_relacion_tipodoc_patologia}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnreltipodocpatologia.sql' width='100' spacingBefore='40'>
			<col name='smn_tipo_documento_id_combo' title='${lbl:b_document_type}' width='50' align='left' format='######' />
			<col name='smn_patologia_id_combo' title='${lbl:b_pathology}' width='50' align='left' format='######' />

		</record>

	</pdf-report>
</config>

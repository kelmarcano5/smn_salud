<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_relacion_documento_servicio}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_relacion_documento_servicio}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_relacion_documento_servicio}' width='60' spacingBefore='40'>
			<col name='smn_documentos_id' title='${lbl:b_contrato_doc}' align='left' format='######' />
			<col name='smn_servicios_id' title='${lbl:b_service}' align='left' format='######' />
			<col name='rdt_tipo_generacion' title='${lbl:b_tipo_generacion}' align='left' format='######' />
			<col name='rdt_hora_generacion' title='${lbl:b_hora_generacion}' align='left' />
		</record>


	</pdf-report>
</config>

<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
		<recordset id='detail-smnrelpatologiaitem.sql' source='session' scope='transaction' />
		<recordset id='detail-smnrelpatologiaservicios.sql' source='session' scope='transaction' />

	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_pathology}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_pathology}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='query.sql' title='${lbl:b_pathology}' width='60' spacingBefore='40'>
			<col name='pat_codigo' title='${lbl:b_code}' align='left' />
			<col name='pat_descripcion' title='${lbl:b_description}' align='left' />
			<col name='pat_estatus' title='${lbl:b_status}' align='left' />
			<col name='pat_fecha_registro' title='${lbl:b_store_date}' align='left' format='dd-MM-yyyy' />
		</record>
		<table recordset='detail-smnrelpatologiaitem.sql' width='100' spacingBefore='40'>
			<col name='smn_rel_patologia_item_id' title='${lbl:b_rel_item_pathology}' width='25' align='left' format='######' />
			<col name='smn_item_rf' title='${lbl:b_item}' width='25' align='left' format='######' />
			<col name='rps_cantidad' title='${lbl:b_quantity}' width='25' align='left' format='######' />
			<col name='rps_fecha_registro' title='${lbl:b_store_date}' width='25' align='left' format='dd-MM-yyyy' />
		</table>
		<table recordset='detail-smnrelpatologiaservicios.sql' width='100' spacingBefore='40'>
			<col name='smn_rel_patologia_servicios_id' title='${lbl:b_rel_services_pathology}' width='25' align='left' format='######' />
			<col name='smn_servicio_rf' title='${lbl:b_service}' width='25' align='left' format='######' />
			<col name='rps_cantidad' title='${lbl:b_quantity}' width='25' align='left' format='######' />
			<col name='rps_fecha_registro' title='${lbl:b_store_date}' width='25' align='left' format='dd-MM-yyyy' />
		</table>


	</pdf-report>
</config>

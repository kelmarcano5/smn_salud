<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="2" cellStep="0" name="${lbl:b_pathology}"/>
	
	<excel 
		recordset='query.sql' 
		sheetname='${lbl:b_pathology}' 
		filename='${lbl:b_pathology}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='pat_codigo' label='${lbl:b_code}' />
		<col id='pat_descripcion' label='${lbl:b_description}' />
		<col id='pat_estatus' label='${lbl:b_status}' />
		<col id='pat_fecha_registro' label='${lbl:b_store_date}' />

	</excel>

</config>

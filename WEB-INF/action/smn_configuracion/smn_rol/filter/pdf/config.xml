<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnrol.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_roles}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_roles}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='smn_usuario_id' title='${lbl:b_users}'  format='######' align='left' />
			<col name='rol_tipo' title='${lbl:b_rol_type}'  align='left' />
			<col name='rol_fecha_registro' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smnrol.sql' width='100' spacingBefore='10'>
			<col name='smn_usuario_id' title='${lbl:b_users}' width='14' align='left' format='######' />
			<col name='rol_tipo' title='${lbl:b_rol_type}' width='14' align='left' />
			<col name='smn_corporacion_rf' title='${lbl:b_corporation}' width='14' align='left' format='######' />
			<col name='smn_entidad_rf' title='${lbl:b_entities}' width='14' align='left' format='######' />
			<col name='smn_sucursal_rf' title='${lbl:b_subsidiaries}' width='14' align='left' format='######' />
			<col name='smn_area_servicio_rf' title='${lbl:b_area_service}' width='14' align='left' format='######' />
			<col name='rol_fecha_registro' title='${lbl:b_store_date}' width='14' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>

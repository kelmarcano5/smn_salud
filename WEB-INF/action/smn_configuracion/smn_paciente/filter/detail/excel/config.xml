<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Exportar documento excel directo al browser
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>domain.ExcelReportOutput</classname>
	</output>
	
	<excel-logo scale="60" url="/images/logo-simone-pdf.png"/>
	<title cellPosY="1" cellPosX="5" cellStep="0" name="${lbl:b_patient}"/>
	
	<excel 
		recordset='query.sql' 
		sheetname='${lbl:b_patient}' 
		filename='${lbl:b_patient}.xls' 
		date-format='dd-MM-yyyy'
		header-background='true'>
		<col id='smn_clase_auxiliar_rf' label='${lbl:b_auxiliary_class}' />
		<col id='smn_auxiliar_rf' label='${lbl:b_auxiliary}' />
		<col id='smn_clasificacion_abc_rf' label='${lbl:b_abc_clasification}' />
		<col id='smn_promotor_rf' label='${lbl:b_promotor}' />
		<col id='smn_forma_pago_rf' label='${lbl:b_way_to_pay}' />
		<col id='pac_vigencia' label='${lbl:b_validation_date}' />
		<col id='pac_estatus' label='${lbl:b_status}' />
		<col id='pac_fecha_registro' label='${lbl:b_store_date}' />

	</excel>

</config>

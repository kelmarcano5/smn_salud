<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnhabitaciones.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_room}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' align="left" />
	<pdf-file-name>${lbl:b_room}.pdf</pdf-file-name>

	<pdf-report pageSize="letter" rotate="false" footer="true" header="true">
		<record recordset='filter.params' title='${lbl:b_filter_find}' noFilterMsg='-- ${lbl:b_all_message} --' width='55' spacingBefore='15'>
			<col name='smn_activo_fijo_rf' title='${lbl:b_activo_fijo}'   align='left' />
			<col name='hab_codigo' title='${lbl:b_code}'  align='left' />
			<col name='hab_descripcion' title='${lbl:b_description}'  align='left' />
			<col name='hab_estatus' title='${lbl:b_status}'  align='left' />
			<col name='hab_clase' title='${lbl:b_class}'  align='left' />
			<col name='hab_tipo_servicio' title='${lbl:b_types_services}'   align='left' />
			<col name='hab_fecha_registro_ini' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />
			<col name='hab_fecha_registro_fin' title='${lbl:b_store_date}'  format='dd-MM-yyyy' align='left' />

		</record>
		<record recordset='query-smnhabitaciones.sql' width='100' spacingBefore='10'>
			<col name='smn_activo_fijo_rf' title='${lbl:b_activo_fijo}' width='14' align='left'  />
			<col name='hab_codigo' title='${lbl:b_code}' width='14' align='left' />
			<col name='hab_descripcion' title='${lbl:b_description}' width='14' align='left' />
			<col name='hab_estatus' title='${lbl:b_status}' width='14' align='left' />
			<col name='hab_clase' title='${lbl:b_class}' width='14' align='left' />
			<col name='tsr_descripcion' title='${lbl:b_types_services}' width='14' align='left'  />
			<col name='hab_fecha_registro' title='${lbl:b_store_date}' width='14' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>

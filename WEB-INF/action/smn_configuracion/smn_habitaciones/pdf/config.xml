<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnhabitaciones.sql" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_room}</pdf-title>
	<pdf-logo url='/images/logo-simone-pdf.png' scale='100' />
	<pdf-file-name>${lbl:b_room}.pdf</pdf-file-name>

	<pdf-report 
		pageSize="letter" 
		rotate="false"
		footer="false" 
		header="true">
		<record recordset='query-smnhabitaciones.sql' width='100' spacingBefore='40'>
			<col name='smn_activo_fijo_rf' title='${lbl:b_activo_fijo}' width='14' align='left'  />
			<col name='hab_codigo' title='${lbl:b_code}' width='14' align='left' />
			<col name='hab_descripcion' title='${lbl:b_description}' width='14' align='left' />
			<col name='hab_estatus' title='${lbl:b_status}' width='14' align='left' />
			<col name='hab_clase' title='${lbl:b_class}' width='14' align='left' />
			<col name='tsr_descripcion' title='${lbl:b_types_services}' width='14' align='left'  />
			<col name='hab_fecha_registro' title='${lbl:b_store_date}' width='14' align='left' format='dd-MM-yyyy' />

		</record>

	</pdf-report>
</config>
